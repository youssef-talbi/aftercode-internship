from flask import Flask
from flask_sqlalchemy import SQLAlchemy
from datetime import datetime

app = Flask(__name__)
app.config['SQLALCHEMY_DATABASE_URI'] = 'mysql://username:password@localhost/db_name'  # MySQL database URI
app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False

db = SQLAlchemy(app)

class Employee(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    name = db.Column(db.String(100), nullable=False)
    email = db.Column(db.String(100), unique=True, nullable=False)
    birth_date = db.Column(db.Date)
    gender = db.Column(db.String(10))
    employee_id = db.Column(db.String(20), unique=True)
    company = db.Column(db.String(100))
    holidays = db.Column(db.Integer)
    leaves = db.Column(db.Integer)
    clients = db.Column(db.Integer)
    projects = db.Column(db.Integer)
    tasks = db.Column(db.Integer)
    assets = db.Column(db.Integer)
    timing_sheets = db.Column(db.Integer)

    def __repr__(self):
        return f"Employee('{self.name}', '{self.email}')"

if __name__ == '__main__':
    app.run(debug=True)
